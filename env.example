# Application Configuration
APP_NAME=Enterprise Knowledge Graph Platform
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Triplestore Configuration
TRIPLESTORE_TYPE=fuseki
TRIPLESTORE_HOST=localhost
TRIPLESTORE_PORT=3030
TRIPLESTORE_DATASET=enterprise_kg
TRIPLESTORE_USERNAME=admin
TRIPLESTORE_PASSWORD=admin123

# SPARQL Endpoints
SPARQL_QUERY_ENDPOINT=http://localhost:3030/enterprise_kg/query
SPARQL_UPDATE_ENDPOINT=http://localhost:3030/enterprise_kg/update

# Database Configuration (for metadata and audit logs)
DATABASE_URL=postgresql://user:password@localhost:5432/ontology_db

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Security
SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Ontology Configuration
ONTOLOGY_BASE_URI=http://enterprise.org/ontology/
ONTOLOGY_VERSION=1.0.0

# Namespaces
NS_CUSTOMER=http://enterprise.org/ontology/customer#
NS_COMPANY=http://enterprise.org/ontology/company#
NS_COMPLIANCE=http://enterprise.org/ontology/compliance#
NS_LINEAGE=http://enterprise.org/ontology/lineage#

# Data Governance
ENABLE_AUDIT_LOGGING=true
ENABLE_COMPLIANCE_CHECKS=true
DATA_RETENTION_DAYS=365

# Compliance Settings
GDPR_ENABLED=true
CCPA_ENABLED=true
AUTO_ANONYMIZATION=false

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/application.log

# Dashboard Configuration
DASHBOARD_URL=http://localhost:3000
ENABLE_DASHBOARD=true

# Email Configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=notifications@enterprise.org
SMTP_PASSWORD=email_password
SMTP_FROM=noreply@enterprise.org

# Monitoring and Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# Feature Flags
ENABLE_ML_ENRICHMENT=false
ENABLE_REAL_TIME_SYNC=true
ENABLE_ADVANCED_ANALYTICS=true

# Data Generation
DATA_GENERATOR_SEED=42
DATA_GENERATOR_LOCALE=en_US
OPENCORPORATES_API_KEY=
GENERATE_SAMPLE_DATA=true
